{
  "kind": "collectionType",
  "collectionName": "variations",
  "info": {
    "singularName": "variation",
    "pluralName": "variations",
    "displayName": "Variation",
    "description": "Individual variations within a template"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "variant": {
      "type": "string"
    },
    "background_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "style": {
      "type": "json"
    },
    "elements": {
      "type": "component",
      "component": "shared.element",
      "repeatable": true
    },
    "background_color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    }
  }
}
