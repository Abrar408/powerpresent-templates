{
  "kind": "collectionType",
  "collectionName": "templates",
  "info": {
    "singularName": "template",
    "pluralName": "templates",
    "displayName": "Template",
    "description": "Presentation template definitions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slides": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::slide.slide",
      "mappedBy": "template"
    },
    "category": {
      "type": "enumeration",
      "default": "general",
      "enum": [
        "general",
        "pitchDeck",
        "medical"
      ]
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string"
    }
  }
}
