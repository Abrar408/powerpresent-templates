{
  "kind": "collectionType",
  "collectionName": "slides",
  "info": {
    "singularName": "slide",
    "pluralName": "slides",
    "displayName": "Slide",
    "description": "Individual slides within a template"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "variant": {
      "type": "string"
    },
    "background_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "style": {
      "type": "json"
    },
    "template": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::template.template",
      "inversedBy": "slides"
    },
    "elements": {
      "type": "component",
      "component": "shared.element",
      "repeatable": true
    },
    "background_color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "variations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::variation.variation"
    },
    "layout": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::layout.layout",
      "inversedBy": "slides"
    },
    "variables": {
      "type": "component",
      "component": "shared.variable",
      "repeatable": true
    }
  }
}
