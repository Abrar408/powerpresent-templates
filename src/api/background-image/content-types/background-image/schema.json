{
  "kind": "collectionType",
  "collectionName": "background_images",
  "info": {
    "singularName": "background-image",
    "pluralName": "background-images",
    "displayName": "Background Image",
    "description": "Background images with position metadata"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "left-background",
        "right-background",
        "top-left-background",
        "bottom-right-background",
        "center",
        "cover",
        "contain"
      ],
      "required": true
    },
    "css_properties": {
      "type": "json",
      "description": "CSS properties for background positioning and styling"
    },
    "variant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::template-variant.template-variant",
      "inversedBy": "background_images"
    },
    "is_default": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json",
      "description": "Tags for categorizing background images"
    }
  }
}
