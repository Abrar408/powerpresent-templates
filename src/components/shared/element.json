{
  "collectionName": "components_shared_elements",
  "info": {
    "displayName": "Element"
  },
  "options": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "heading1",
        "heading2",
        "heading3",
        "heading4",
        "heading5",
        "heading6",
        "paragraph",
        "span",
        "ordered-bullets",
        "un-ordered-bullets",
        "image",
        "group",
        "shape",
        "background-element"
      ]
    },
    "style": {
      "type": "json"
    },
    "children": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "group"
          ]
        }
      },
      "component": "shared.child-element",
      "repeatable": true
    },
    "background_element": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "background-element"
          ]
        }
      },
      "component": "shared.background-element",
      "repeatable": false
    },
    "repeat": {
      "type": "integer"
    },
    "custom_style_node": {
      "type": "string"
    },
    "data_type": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "paragraph"
          ]
        }
      },
      "enum": ["numbered-bullet", "icon"]
    },
    "media": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "image"
          ]
        }
      },
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
